<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <TargetFrameworks>netcoreapp1.1;net461</TargetFrameworks>
        <LangVersion>latest</LangVersion>
        <ApplicationIcon />
        <StartupObject />
        <AssemblyName>TeximpNet.Sample</AssemblyName>
        <RootNamespace>TeximpNet.Sample</RootNamespace>
    </PropertyGroup>
    <ItemGroup>
        <Compile Update="**\*.xaml.cs">
            <DependentUpon>%(Filename)</DependentUpon>
        </Compile>
        <EmbeddedResource Include="**\*.xaml">
            <SubType>Designer</SubType>
        </EmbeddedResource>
    </ItemGroup>
    <ItemGroup>
      <Content Include="bunny.jpg">
        <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      </Content>
    </ItemGroup>
    <ItemGroup>
        <PackageReference Include="Avalonia" Version="0.5.0" />
        <PackageReference Include="Avalonia.Desktop" Version="0.5.0" />
        <PackageReference Include="Serilog.Sinks.Trace" Version="2.1.0" />
    </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\TeximpNet\TeximpNet.csproj" />
  </ItemGroup>

  <Import Project="$(ProjectDir)..\TeximpNet\bin\$(Configuration)\build\TeximpNet.targets" />
</Project>